<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/frame_layout"
    android:background="@drawable/backgorund_isi_belajar_1"
    tools:context=".IsiBelajarHuruf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="47dp"
            android:src="@drawable/ic_icon_back"
            android:id="@+id/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:gravity="center|end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="171dp"
                    android:layout_height="47dp"
                    android:src="@drawable/button_indonesia_active"
                    android:id="@+id/bahasa_indonesia"/>

                <ImageView
                    android:layout_width="171dp"
                    android:layout_height="47dp"
                    android:src="@drawable/button_inggris_inactive"
                    android:id="@+id/bahasa_inggris"/>
            </LinearLayout>

            <ImageView
                android:layout_width="44dp"
                android:layout_height="47dp"
                android:src="@drawable/button_auto"
                android:id="@+id/auto"/>

        </LinearLayout>








      </LinearLayout>





</LinearLayout>