                        android:src="@drawable/gambar_bentuk_persegi_panjang"/>

                </FrameLayout>

                <!--                -->

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
